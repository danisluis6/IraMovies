<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ImageHolderView" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SlidingTabs">
        <item name="tabTextColor">#FF5252</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="tabIndicatorColor">#FF5252</item>
        <item name="tabIndicatorHeight">1.5dp</item>
    </style>

    <style name="AppTheme.CustomProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
